@model PeopleFact

@{
    ViewData["Title"] = "Create";
}

<h1>Создание записи</h1>

<h4>Выполненный план работ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="peopleFactDate"  class="control-label">Дата выполненной работы</label>
                <input asp-for="peopleFactDate" class="form-control" />
                <span asp-validation-for="peopleFactDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="peopleFactIndex" class="control-label">Рейтинг сотрудника</label>
                <input asp-for="peopleFactIndex" class="form-control" />
                <span asp-validation-for="peopleFactIndex" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="workPeopleId" class="control-label">Имя сотрудника</label>
                @Html.DropDownListFor(model => model.workPeopleId, ViewBag.workPeoples as SelectList)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернутся к списку</a>
</div>
