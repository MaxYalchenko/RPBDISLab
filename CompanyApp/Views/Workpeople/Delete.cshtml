@model WorkpeopleView

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление записи</h1>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Рабочие люди</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
             <label asp-for="peopleName" class="control-label">Имя рабочего</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.peopleName)
        </dd>
         <dt class = "col-sm-2">
                <label asp-for="amountPeople" class="control-label">Рейтинг рабочего</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.amountPeople)
        </dd>
         <dt class = "col-sm-2">
             <label asp-for="Achievements" class="control-label">Достижения</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Achievements)
        </dd>
        <dt class = "col-sm-2">
             <label asp-for="subdivision" class="control-label">Предприятие</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.subdivision)

        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="workpeopleId"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Вернутся к списку</a>
    </form>
</div>
