@model CompanyApp.Models.Workpeople

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить запись</h1>

<h4>Рабочие люди</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input type="hidden" asp-for="workpeopleId" />
            <div class="form-group">
                <label asp-for="peopleName" class="control-label">Имя рабочего</label>
                <input asp-for="peopleName" class="form-control" />
                <span asp-validation-for="peopleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amountPeople" class="control-label">Рейтинг рабочего</label>
                <input asp-for="amountPeople" class="form-control" />
                <span asp-validation-for="amountPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Achievements" class="control-label">Достижения</label>
                <input asp-for="Achievements" class="form-control" />
                <span asp-validation-for="Achievements" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="subdivisionId" class="control-label">Предприятие</label>
               @Html.DropDownListFor(model => model.subdivisionId, ViewBag.subdivisions as SelectList)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
