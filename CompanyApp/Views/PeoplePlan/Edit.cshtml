@model CompanyApp.Models.PeoplePlan

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить запись</h1>

<h4>План работ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="peoplePlanId" />
            <div class="form-group">
                <label asp-for="peoplePlanDate" class="control-label">Дата запланированной работы</label>
                <input asp-for="peoplePlanDate" class="form-control" />
                <span asp-validation-for="peoplePlanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="peoplePlanIndex" class="control-label">Рейтинг сотрудника</label>
                <input asp-for="peoplePlanIndex" class="form-control" />
                <span asp-validation-for="peoplePlanIndex" class="text-danger"></span>
            </div>
        <div class="form-group">
            
                <label asp-for="workPeopleId" class="control-label">Имя сотрудника</label>
                @Html.DropDownListFor(model => model.workPeopleId, ViewBag.workPeoples as SelectList)
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
