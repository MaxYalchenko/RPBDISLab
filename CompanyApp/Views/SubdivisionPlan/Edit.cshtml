@model CompanyApp.Models.SubdivisionPlan

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить запись</h1>

<h4>План работ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="subdivisionPlanId" />
            <div class="form-group">
                <label asp-for="subdivisionPlanDate" class="control-label">Дата запланированной работы</label>
                <input asp-for="subdivisionPlanDate" class="form-control" />
                <span asp-validation-for="subdivisionPlanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="subdivisionPlanIndex" class="control-label">Рейтинг предприятия</label>
                <input asp-for="subdivisionPlanIndex" class="form-control" />
                <span asp-validation-for="subdivisionPlanIndex" class="text-danger"></span>
            </div>
        <div class="form-group">
            
                <label asp-for="subdivisionId" class="control-label">Название предприятия</label>
                @Html.DropDownListFor(model => model.subdivisionId, ViewBag.subdivisions as SelectList)
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
